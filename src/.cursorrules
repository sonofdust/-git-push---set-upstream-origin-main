{
    "rules": [
        {
            "pattern": "src/**/*.{ts,tsx}",
            "context": {
                "language": "typescript",
                "framework": "react",
                "styling": "tailwindcss"
            }
        },
        {
            "pattern": "app/**/*.{ts,tsx}",
            "context": {
                "language": "typescript",
                "framework": "remix",
                "styling": "tailwindcss"
            }
        },
        {
            "pattern": "styles/**/*.css",
            "context": {
                "language": "css",
                "framework": "tailwindcss"
            }
        },
        {
            "pattern": "components/**/*.{ts,tsx}",
            "context": {
                "language": "typescript",
                "framework": "react",
                "componentType": "reusable"
            }
        },
        {
            "pattern": "utils/**/*.ts",
            "context": {
                "language": "typescript",
                "codeType": "utility"
            }
        },
        {
            "pattern": "tests/**/*.{ts,tsx}",
            "context": {
                "language": "typescript",
                "framework": "react",
                "testFramework": "jest"
            }
        }
    ],
    "global": {
        "projectType": "web application",
        "codeStyle": "functional",
        "preferredLanguage": "typescript",
        "uiFramework": "react",
        "cssFramework": "tailwindcss",
        "serverFramework": "remix"
    }
}